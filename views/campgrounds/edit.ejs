<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit CampGround</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" novalidate
                class="row g-3 needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="tittle">Tittle</label>
                    <input class="form-control" type="text" title="tittle" id="tittle" name="campground[tittle]"
                        value="<%= campground.tittle %>" required>
                    <div class="valid-feedback">
                        Valid!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" title="location" id="location" name="campground[location]"
                        value="<%= campground.location %> " required>
                    <div class="valid-feedback">
                        Valid!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>

                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%= campground.price %> "
                            required>
                        <div class="valid-feedback">
                            Valid!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" title="description" id="description"
                        name="campground[description]" required><%= campground.description %></textarea>
                    <div class="valid-feedback">
                        Valid!
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" name="image" id="image" multiple>
                        <label for="image" class="form-file-label">
                            <span class="form-file-text custom-file-label">Add More images...</span>
                            <span class="form-file-button">Browser</span>
                        </label>
                    </div>
                    <br>
                    <div class="mb-3 text-center">
                        <% campground.images.forEach(function (img, i) { %>
                            <img src="<%=img.thumbnail%>"  class="img-thumnail" alt="">
                            <div class="form-check-inline">
                                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                            </div>
                            <label for="image-<%=i%>">Delete?</label>
                            <br>
                            <br>

                            <% }) %>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-info">Change Campground</button>
                    </div>
            </form>
            <a href="/campgrounds/<%= campground._id %> ">Back to Campground</a>
        </div>
    </div>